<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="mainPane" prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShowUserController">
   <children>
      <Text layoutX="204.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestion Utilisateur">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
      <TableView fx:id="tableViewUser" layoutX="72.0" layoutY="114.0" prefHeight="310.0" prefWidth="554.0" styleClass="Table-view">
         <columns>
            <TableColumn fx:id="userIdColumn" prefWidth="100.0" styleClass="table-column" text="User id" />
            <TableColumn fx:id="emailColumn" prefWidth="100.0" styleClass="table-column" text="email" />
            <TableColumn fx:id="rolesColumn" prefWidth="150.0" styleClass="table-column" text="roles" />
            <TableColumn fx:id="passwordColumn" prefWidth="100.0" styleClass="table-column" text="password" />
            <TableColumn fx:id="ivColumn" prefWidth="100.0" styleClass="table-column" text="is verified" />
         </columns>
      </TableView>
      <Button fx:id="createuserbtn" layoutX="94.0" layoutY="456.0" mnemonicParsing="false" onAction="#addUser" style="-fx-background-color: #2262C6;" text="Ajouter un utilisateur" textFill="WHITE" />
      <Button fx:id="updateuserbtn" layoutX="282.0" layoutY="456.0" mnemonicParsing="false" onAction="#updateUser" style="-fx-background-color: #2262C6;" text="Modifier un utilisateur" textFill="WHITE" />
      <Button fx:id="deleteuserbtn" layoutX="462.0" layoutY="456.0" mnemonicParsing="false" onAction="#deleteUser" style="-fx-background-color: #2262C6;" text="Supprimer un utilisateur" textFill="WHITE" />
      <Button fx:id="createuserbtn1" layoutX="233.0" layoutY="489.0" mnemonicParsing="false" onAction="#ViewLoginChart" prefHeight="26.0" prefWidth="219.0" style="-fx-background-color: #2262C6;" text="statistiques user login" textFill="WHITE" />
      <TextField fx:id="searchBar" layoutX="214.0" layoutY="72.0" prefHeight="26.0" prefWidth="271.0" promptText="search user" />
   </children>
</AnchorPane>
